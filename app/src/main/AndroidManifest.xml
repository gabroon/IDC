<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.idc.www" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/idc_logo_launcher"
        android:label="@string/app_name"

        >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:icon="@drawable/idc_logo_launcher"
            android:label="@string/app_name"
            android:theme="@style/custom_action_bar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN_PAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoListActivity"
            android:label="@string/app_name"
           >
            <intent-filter>
                <action android:name="android.intent.action.VideoListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Facebook"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.FACEBOOK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TwitterFeed"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TWITTER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Youtube"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.YOUTUBE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Slide"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SLIDE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Radio"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.RADIO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="cd538965e74645a72e53f4c5b235b890bd5a2219" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
